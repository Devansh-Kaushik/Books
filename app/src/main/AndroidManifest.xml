        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PdfViewer"
        tools:ignore="AllowBackup">
        <activity android:name=".about" />
        <activity android:name=".fricton1" />
        <activity android:name=".mystry1" />
        <activity android:name=".comic1" />
        <activity android:name=".historic1" />
        <activity android:name=".fantasy1" />
        <activity android:name=".horrror1" />
        <activity android:name=".cassic1" />
        <activity android:name=".act1" />
        <activity android:name=".MainActivity2" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>